<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="crm_mgmt" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!--############## including entities ##############-->
        <!-- User management needs -->
        <mapping-file>hbm/mysql/sys/RelSysGroupRole.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/RelSysRoleFunc.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/RelSysUserGroup.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/RelSysUserRole.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysDept.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysFunc.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysGroup.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysRole.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysUser.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysUserPhoto.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysUserPwd.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/sys/SysGlobalVariable.hbm.xml</mapping-file>

        <!-- supported -->
        <mapping-file>hbm/mysql/dict/SysDict.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/file/SysAttachment.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/file/SysAttachmentConfig.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/log/RevisionEntity.hbm.xml</mapping-file>
        <mapping-file>hbm/mysql/log/ModifiedEntityTypeEntity.hbm.xml</mapping-file>
        <!--############## including entities ##############-->

        <class>com.asdc.jbp.crm.entity.Sales</class>
        <class>com.asdc.jbp.crm.entity.Activity</class>
        <class>com.asdc.jbp.crm.entity.Competitor</class>
        <class>com.asdc.jbp.crm.entity.Contact</class>
        <class>com.asdc.jbp.crm.entity.Customer</class>
        <class>com.asdc.jbp.crm.entity.Dict</class>
        <class>com.asdc.jbp.crm.entity.Clew</class>
        <class>com.asdc.jbp.crm.entity.Pact</class>
        <class>com.asdc.jbp.crm.entity.Project</class>
        <class>com.asdc.jbp.crm.entity.Implementer</class>
        <class>com.asdc.jbp.crm.entity.Cost</class>
        <class>com.asdc.jbp.crm.entity.RecPay</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.validator.autoregister_listeners" value="false" />
            <property name="hibernate.jdbc.batch_size" value="50" />
            <property name="hibernate.jdbc.fetch_size" value="100" />

            <!-- auditing about -->
            <property name="org.hibernate.envers.revision_field_name" value="REV_ID"/>
            <property name="org.hibernate.envers.revision_type_field_name" value="REV_TYPE"/>
            <property name="org.hibernate.envers.store_data_at_delete" value="true"/>
            <property name="org.hibernate.envers.track_entities_changed_in_revision" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
