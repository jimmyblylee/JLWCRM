<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context  http://www.springframework.org/schema/context/spring-context-4.2.xsd
        http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.2.xsd"
    xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:jee="http://www.springframework.org/schema/jee">

    <context:component-scan base-package="com.asdc.jbp.sys.controller" />
    <context:component-scan base-package="com.asdc.jbp.sys.service.impl" />
    <context:component-scan base-package="com.asdc.jbp.sys.dao" />

    <bean id="sysEntityManager"
        class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="sys_mgmt" />
        <property name="dataSource">
            <bean class="com.atomikos.jdbc.AtomikosDataSourceBean"
                init-method="init" destroy-method="close">
                <property name="uniqueResourceName">     
                    <value>mysql</value>     
                </property> 
                <property name="xaDataSourceClassName">
                    <value>com.mysql.jdbc.jdbc2.optional.MysqlXADataSource</value>
                </property>
                <property name="xaProperties">
                    <props>
                    <prop key="pinGlobalTxToPhysicalConnection">true</prop>
                        <prop key="URL">jdbc:mysql://localhost:3306/jbp_dev?useUnicode=true&amp;characterEncoding=utf-8</prop>
                        <prop key="user">root</prop>
                        <prop key="password">123456</prop>
                    </props>
                </property>

            </bean>
        </property>
    </bean>
</beans>