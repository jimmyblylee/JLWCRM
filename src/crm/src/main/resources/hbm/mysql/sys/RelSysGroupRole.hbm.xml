<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.asdc.jbp.sys.entity">
    <class name="RelSysGroupRole" table="SYS_GROUP_ROLE">
        <id name="id" column="REL_ID" type="int">
            <generator class="identity"/>
        </id>
        <property name="groupId" column="GROUP_ID" type="int"/>
        <property name="roleId" column="ROLE_ID" type="int"/>
    </class>
    
    <query name="sys.hql.removeRelOfGroupRoleByGroupId">
        <![CDATA[delete from RelSysGroupRole where groupId = :groupId]]>
    </query>
    
    <query name="sys.hql.removeRelOfGroupRoleByGroupIdAndRoleId">
        <![CDATA[delete from RelSysGroupRole where groupId = :groupId and roleId = :roleId]]>
    </query>
    
    <query name="sys.hql.getRelOfGroupRoleByGroupIdAndRoleId">
        <![CDATA[from RelSysGroupRole where groupId = :groupId and roleId = :roleId]]>
    </query>
</hibernate-mapping>