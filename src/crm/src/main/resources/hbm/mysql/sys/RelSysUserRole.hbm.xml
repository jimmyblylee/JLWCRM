<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.asdc.jbp.sys.entity">
    <class name="RelSysUserRole" table="SYS_USER_ROLE">
        <id name="id" column="REL_ID" type="int">
            <generator class="identity"/>
        </id>
        <property name="userId" column="USER_ID" type="int"/>
        <property name="roleId" column="ROLE_ID" type="int"/>
    </class>
    <query name="sys.hql.removeRelOfUserRoleByUserId">
        <![CDATA[delete from RelSysUserRole where userId = :userId]]>
    </query>
    <query name="sys.hql.removeRelOfUserRoleByRoleIdAndUserId">
        <![CDATA[delete from RelSysUserRole where userId = :userId and roleId = :roleId]]>
    </query>
    <query name="sys.hql.getRelOfUserRoleByRoleIdAndUserId">
        <![CDATA[from RelSysUserRole where userId = :userId and roleId = :roleId]]>
    </query>
    <query name="sys.hql.removeRelOfUserRoleByRoleId">
        <![CDATA[delete from RelSysUserRole where roleId = :roleId]]>
    </query>
</hibernate-mapping>